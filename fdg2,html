  <div class="status-text" id="status-text"></div>

  <!-- âœ… New blinking message -->
  <div class="gov-message" id="gov-message">
    Generating your Degree from Government Servers
  </div>

  <script>
    const loadingContainer = document.getElementById('loading-container');
    const loadingBar = document.getElementById('loading-bar');
    const statusText = document.getElementById('status-text');
    const govMessage = document.getElementById('gov-message');

    let interval = null;

    // Start the loading process immediately on page load
    window.addEventListener('load', () => {
      if (interval) clearInterval(interval);

      loadingBar.style.transition = "none";
      loadingBar.style.width = "0%";
      loadingContainer.style.display = "block";

      statusText.textContent = "Generating your certificate...";
      govMessage.style.display = "block";

      let progress = 0;
      const duration = 60000; // 1 minute
      const stepTime = 100;
      const increment = (stepTime / duration) * 100;

      loadingBar.style.transition = "width 0.1s linear";

      interval = setInterval(() => {
        progress += increment;
        if (progress >= 100) {
          clearInterval(interval);
          loadingBar.style.width = "100%";
          window.location.href = "fdg3.html";
        } else {
          loadingBar.style.width = progress + "%";
        }
      }, stepTime);
    });
  </script>
